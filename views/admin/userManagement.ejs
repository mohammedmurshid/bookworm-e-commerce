<div class="container-fluid px-4">
    <h1 class="mt-4">User Management</h1>
    <%- include("../partials/errorMessage") %>
    <div class="card mb-4">
      <div class="card-header">
        <i class="fas fa-table me-1"></i>
        User Data
        <button class="btn btn-dark btn-sm float-end" onclick="exportCsv()">Export <i class="fa-solid fa-download"></i></button>
      </div>
      <div class="card-body">
        <table id="datatablesSimple">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Account Created</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </thead>
          <tfoot>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Account Created</th>
              <th>Status</th>
              <th>Action</th>
            </tr>
          </tfoot>
          <tbody>
            <% users.forEach(user => { %> 
            <tr>
                <td><%= user.name %> </td>
                <td><%= user.email %> </td>
                <td><%= user.createdAt?.toDateString() %> </td>
                <% if (user.isActive) { %> 
                <% if (user.isAdmin) { %> 
                <td><span class="badge bg-primary">Admin</span></td>
                <% } else { %> 
                <td><span class="badge bg-success">Active</span></td>
                <% } } else { %> 
                <td><span class="badge bg-danger">Blocked</span></td>                
                <% } %> 
                <td>
                    <% if (!user.isAdmin) { %> 
                    <% if (user.isActive) { %> 
                        <form action="/admin/blockUser/<%= user.id %> " method="post">
                            <button type="button" data-bs-target="#modalBlock<%= user.id %>" data-bs-toggle="modal" class="btn btm-sm btn-outline-danger"><i class="fa-solid fa-lock"></i></button>
                            <!-- Block user modal start -->
                            <div class="modal modal-alert" tabindex="-1" role="dialog" id="modalBlock<%= user.id %> ">
                                <div class="modal-dialog modal-dialog-centered" role="document">
                                    <div class="modal-content rounded-3 shadow">
                                      <div class="modal-body p-4 text-center">
                                        <h5 class="mb-2">Waring! Are you sure</h5>
                                        <p class="mb-0">This user cant login if blocked.</p>
                                      </div>
                                      <div class="modal-footer flex-nowrap p-0">
                                        <button type="submit" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0 border-end"><strong>Yes</strong></button>
                                        <button type="button" class="btn btn-lg btn-link fs-6 text-decoration-none col-6 m-0 rounded-0" data-bs-dismiss="modal">No</button>
                                      </div>
                                    </div>
                                </div>                                
                            </div>
                            <!-- Block user modal end -->
                        </form>
                    <% } else { %> 
                        <!-- Unblock user modal -->
                        <form action="/admin/unblockUser/<%= user.id %> " method="post">
                            <button type="submit" class="btn btn-sm btn-outline-success"><i class="fa-solid fa-lock-open"></i></button>
                        </form>
                    <% } } else { %> 
                        <!-- in the case of admin, we can't block admin privileged user -->
                        <button type="submit" disabled class="btn btn-sm btn-outline-dark"><i class="fa-solid fa-lock-open"></i></button>
                    <% } %> 
                </td>
            </tr>
            <% }) %> 
          </tbody>
        </table>
      </div>
    </div>
  </div>
  
  <SCript>
    function exportCsv() {
      myTable.export({
        type: "csv",
        skipColumn: [4],
        filename: "user_details",
      });
    }
  </SCript>