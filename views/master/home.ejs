<!-- Featured Section Begin -->
<section class="featured spad">
  <div class="container">
    <div class="row">
      <div class="col-lg-12">
        <div class="section-title">
          <h2>Featured Products</h2>
        </div>
        <!-- <div class="featured__controls">
          <ul>
            <li class="active" data-filter="*">All</li>
            <li data-filter=".Men">Fresh Fruits</li>
            <li data-filter=".Women">Vegetables</li>
            <li data-filter=".Kids">Juice</li>
          </ul>
        </div> -->
      </div>
    </div>
    <div class="row featured__filter">
      <% featuredProducts.forEach((product)=> { %>
      <div
        class="col-lg-3 col-md-4 col-sm-6 mix <%= product.category.categoryName %>"
      >
        <div class="featured__item">
          <div
            class="featured__item__pic set-bg"
            data-setbg="/files/<%=product.productImagePath[0]%>"
          >
            <ul class="featured__item__pic__hover">
              <li>
                <a onclick="wishlist('<%=product.name%>','<%=product.id%>')"
                  ><i class="fa fa-heart"></i
                ></a>
              </li>
              <li>
                <a
                  onclick="addToCart('<%=product.id%>','<%=product.name%>','<%=product.price%>',1,'<%=product?.offerPrice%>')"
                  ><i class="fa fa-shopping-cart"></i
                ></a>
              </li>
            </ul>
          </div>
          <% if(product.discount){ %>
          <div class="product__discount__item__text">
            <h5>
              <a href="/product/<%= product.id %>"><%= product.name %> </a>
            </h5>
            <div class="product__item__price">
              ₹<%= product.offerPrice.toFixed(2)%><span
                >₹<%= product.price %>
              </span>
            </div>
          </div>
          <% } else{ %>
          <div class="product__item__text">
            <h6>
              <a href="/product/<%= product.id %>"><%= product.name %></a>
            </h6>
            <h5>₹<%= product.price %></h5>
          </div>
          <% } %>
        </div>
      </div>
      <% }) %>
    </div>
  </div>
</section>
<!-- Featured Section End -->

