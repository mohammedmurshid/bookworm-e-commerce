<!-- Hero Section Begin -->
<section class="hero">
  <div class="container">
    <div class="row">
      <div class="col-lg-3">
        <div class="hero__categories">
          <div class="hero__categories__all">
            <i class="fa fa-bars"></i>
            <span>All departments</span>
          </div>
          <ul class="hero_all_category">
            <% allCategories.forEach((category)=>{ %>
            <li><a href="/shop/category/<%= category.categoryName %>/1"><%= category.categoryName %></a></li>
            <% }) %>
          </ul>
        </div>
      </div>
      <div class="col-lg-9">
        <div class="hero__search">
          <div class="hero__search__form autocomplete">
            <form action="/search/1" method="get">
              <div class="hero__search__categories">
                All Categories
                <span class="arrow_carrot-down"></span>
              </div>
              <input type="text" placeholder="What do yo u need?" required name="name" id="searchKey" onkeyup="sendData(this)">
              <button type="submit" class="site-btn">SEARCH</button>
            </form>
          </div>
          <div class="hero__search__phone">
            <div class="hero__search__phone__icon">
              <i class="fa fa-phone"></i>
            </div>
            <div class="hero__search__phone__text">
              <h5>+65 11.188.888</h5>
              <span>support 24/7 time</span>
            </div>
          </div>
        </div>
        <% if(primaryBanner){%>
        <div class="hero__item set-bg primary-banner" data-setbg="/files/<%= primaryBanner.bannerImagePath %>">
          <div class="hero__text">
            <span>BookWorm</span>
            <h2><%= primaryBanner.title %> <br><%= primaryBanner.caption %></h2>          
            <a href="<%= primaryBanner.url %>" class="primary-btn">SHOP NOW</a>
          </div>
        </div>
        <% } %>
      </div>
    </div>
  </div>
</section>
<!-- Hero Section End -->

